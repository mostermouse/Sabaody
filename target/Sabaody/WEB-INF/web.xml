<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!-- 서블릿 매핑 -->
  <servlet>
    <servlet-name>SelectServlet</servlet-name>
    <jsp-file>/WEB-INF/views/selectview.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>SelectServlet</servlet-name>
    <url-pattern>/selectview</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RecordServlet</servlet-name>
    <jsp-file>/WEB-INF/views/record.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>RecordServlet</servlet-name>
    <url-pattern>/record</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/WEB-INF/views/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>


  <filter>
    <filter-name>charConfig</filter-name>
    <filter-class>org.sabaody.filter.CharConfig</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>charConfig</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>
